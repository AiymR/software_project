<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="margin-left: 250px;">Add New Comment to <%= review.name %></h1>
      </div>

      <div class="row">

        <div style="width: 30%; margin: 25px auto;">
            <form action="/reviews/<%= review._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/reviews">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
