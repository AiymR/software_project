<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Wheather</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" style="width=30%;" src="<%= review.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$199.00/day</h4>
                    <h4><a><%=review.name%></a></h4>
                    <p><%= review.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/reviews/<%= review._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% review.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    <form id="delete-form" action="/reviews/<%= review._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
